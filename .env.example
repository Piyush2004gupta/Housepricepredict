# PortfolioMaker Environment Configuration

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///portfolio_generator.db

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads

# Application Settings
COMPANY_NAME=PortfolioMaker
DOMAIN_NAME=portfoliomaker.com
SUPPORT_EMAIL=support@portfoliomaker.com

# Security Settings
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# CDN Configuration (Optional)
CDN_DOMAIN=cdn.portfoliomaker.com
STATIC_URL_PREFIX=/static

# Social Media Links
TWITTER_URL=https://twitter.com/portfoliomaker
LINKEDIN_URL=https://linkedin.com/company/portfoliomaker
GITHUB_URL=https://github.com/portfoliomaker